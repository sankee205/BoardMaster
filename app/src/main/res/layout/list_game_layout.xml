<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameListCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Name"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listGamePlayers"
            android:layout_width="113dp"
            android:layout_height="75dp"
            android:layout_below="@+id/listGameMembers"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_toStartOf="@id/listGameMembers"
            android:layout_toLeftOf="@id/listGameMembers"
            android:text="Players"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/listGroupImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/listGameTitle"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:layout_below="@+id/listGroupName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Title" />

        <TextView
            android:id="@+id/listGameMembers"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_toEndOf="@+id/listGroupName"
            android:layout_toRightOf="@+id/listGroupName"
            android:text="GameMembers:"
            android:textColor="#020101" />

        <TextView
            android:id="@+id/listGroupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listGroupName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Date " />

        <TextView
            android:id="@+id/listGroupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listGroupName"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Time" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>