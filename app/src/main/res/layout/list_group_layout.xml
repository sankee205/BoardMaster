<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameListCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listGroupName"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Name"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/listGroupImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/listGroupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listGroupName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Date " />

        <TextView
            android:id="@+id/listGroupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listGroupName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:layout_toEndOf="@+id/listGroupImage"
            android:layout_toRightOf="@+id/listGroupImage"
            android:text="Time" />

        <ImageView
            android:id="@+id/listGroupInfoButton"
            android:layout_width="46dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>